@{
    ViewData["Title"] = "Kaleidoscope Official Website";
    @section Styles {
        <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
    }
    @section Scripts {
        <script src="~/js/home.js"></script>
    }
}


<div class="container-lg my-3 w-100">
    <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#myCarousel" data-bs-slide-to="2"></li>
        </ol>
                
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/css/images/2.jpg" class="d-block w-100" alt="Slide 1">
                <div class="carousel-caption">
                    <h3>Bingqilin</h3>
                    <p>Explore the world in ice that was once unfrozen. Find a way to return the world to its former glory.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/css/images/peebojump2.jpg" class="d-block w-100" alt="Slide 2">
                <div class="carousel-caption">
                    <h3>Peebojump</h3>
                    <p>It was stated that only the bravest heart could reach the peak of the monster-filled tower. Help Peebo jump the way up to prove its bravery.</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/css/images/maestro.jpg" class="d-block w-100" alt="Slide 3">
                <div class="carousel-caption">
                    <h3>Maestro Of Time</h3>
                    <p>The only one who can control time in this world is not only the divine being. Walk through this journey of finding its meaning</p>
                </div>
            </div>
        </div>
        
        <!-- Carousel controls -->
        <a class="carousel-control-prev" href="#myCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
</div>

